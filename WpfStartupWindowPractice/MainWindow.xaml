<Window x:Class="WpfStartupWindowPractice.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfStartupWindowPractice"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Margin="50">

        <TextBlock Text="Main Window" FontSize="40" HorizontalAlignment="Center"/>
        <TextBlock x:Name="SubText" FontSize="25" HorizontalAlignment="Center" Foreground="#ff202020"/>

    </StackPanel>
</Window>
